<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/notification_bak</item>
        <item name="colorPrimaryDark">@color/toolbar_blue2</item>
        <item name="colorPrimary">@color/toolbar_blue2</item>
        <item name="colorAccent">@color/color_title_bg2</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Full" parent="AppTheme.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.Splash" parent="AppTheme.Full">
        <item name="android:windowBackground">@color/colorAccent</item>
        <item name="android:colorBackgroundCacheHint" tools:targetApi="eclair">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="AppTheme.videoPlay" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="AppTheme.Dialog" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>

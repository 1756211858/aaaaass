<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/notification_bak</item>
        <item name="colorPrimaryDark">@color/toolbar_blue2</item>
        <item name="colorPrimary">@color/toolbar_blue2</item>
        <item name="colorAccent">@color/color_title_bg2</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="AppTheme.Splash" parent="AppTheme">
        <item name="android:windowBackground">@color/colorAccent</item>
        <item name="android:colorBackgroundCacheHint" tools:targetApi="eclair">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="AppTheme.videoPlay" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="TranslucentStatus" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="AppTheme.dialogTheme" parent="Theme.AppCompat.Dialog">
        <!--该行代码就是设置AlertDialog的背景-->
        <item name="android:background">@color/menu_transparent</item>
        <item name="android:windowBackground">@color/menu_transparent</item>
        <item name="android:windowFrame">@null</item><!--窗框-->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowActionBar">false</item>
    </style>
    <style name="CustomTabLayoutTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>

    </style>
</resources>
